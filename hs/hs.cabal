author:              Nobuo Yamashita
maintainer:          nobsun@sampou.org
copyright:           Â© 2017, Nobuo Yamashita
category:            Sample Code
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Protocol
--                     , GameState
                     , NormTypes
                     , ClaimedGraph
                     , CommonState
                     , OnlinePlay
                     , OfflinePlay
                     , Punter
                     , Punter.Pass
                     , Punter.ClaimAny
                     , Punter.ClaimGreedy
                     , Punter.MaxDegree
                     , Punter.Alternate
                     , Punter.STF
                     , Punter.Longest
                     , Punter.Connector
                     , Punters
                     , Strategy.Score
                     , Strategy.Degree
                     , Strategy.Neighbor
                     , Dijkstra
                     , UnionFind
                     , ScoreTable
                     , DistanceTable
--                     , GraphUtils
  ghc-options:         -Wall
  build-depends:       base >= 4.7 && < 5
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , containers
                     , transformers
                     , hashable
                     , heaps
                     , network
                     , text >= 1.2.2.1
                     , unordered-containers
  default-language:    Haskell2010

executable TestPunter
  hs-source-dirs:      app
  main-is:             TestPunter.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , network
                     , text >= 1.2.2.1
                     , unordered-containers
                     , hs
  default-language:    Haskell2010

executable TestPunterOnline
  hs-source-dirs:      app
  main-is:             TestPunterOnline.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , network
                     , text >= 1.2.2.1
                     , hs
  default-language:    Haskell2010

executable TestPunterOffline
  hs-source-dirs:      app
  main-is:             TestPunterOffline.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , text >= 1.2.2.1
                     , hs
  default-language:    Haskell2010

executable runpunter
  hs-source-dirs:      app
  main-is:             runpunter.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , network
                     , text >= 1.2.2.1
                     , optparse-applicative
                     , hs
  default-language:    Haskell2010

executable AnyPunter
  hs-source-dirs:      app
  main-is:             AnyPunter.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , fgl >= 5.5.3.1
                     , aeson >= 1.0.2.1
                     , bytestring
                     , text >= 1.2.2.1
                     , hs
  default-language:    Haskell2010

test-suite hs-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/nobsun/icfpc2017/hs
